<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UpHubInput">
        <item name="android:background">@drawable/background_login_input</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UpHubPrimaryButton">
        <item name="android:background">@drawable/background_login_button</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="UpHubSecondaryButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">@color/background</item>
    </style>

    <style name="UpHubPrimaryText">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UpHubSecondaryText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="UpHubAccentText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="UpHubPrimaryMessage">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
